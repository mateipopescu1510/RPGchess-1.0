    <script>

    var classicRPGBtn;
    var classicChessBtn;
    var insanityRPGBtn;
    var defaultBtnColor;


    window.onload = function() {
      classicRPGBtn = document.getElementById("joinClassicRPG")
      classicChessBtn = document.getElementById("joinClassicChess");
      insanityRPGBtn = document.getElementById("joinInsanityRPG");
      defaultBtnColor = classicRPGBtn.style.backgroundColor;


      classicRPGBtn.addEventListener("click", joinClassicRPG);
      classicChessBtn.addEventListener("click", joinClassicChess);
      insanityRPGBtn.addEventListener("click", joinInsanityRPG);

    }
		function joinClassicRPG()
    {
      if(classicRPGBtn.innerHTML == "Leave Queue")
      {
        console.log("leaving queue");
        classicRPGBtn.innerHTML = "Classic RPG";
        classicRPGBtn.style.backgroundColor = defaultBtnColor; 
        classicChessBtn.disabled = false;
        insanityRPGBtn.disabled = false;
        fetch('/leaveQueue?mode=classicrpg').then(response => console.log(response));
      }
      else
      {
        console.log("joining queue");
        classicRPGBtn.innerHTML = "Leave Queue";
        classicRPGBtn.style.backgroundColor = "red";
        classicChessBtn.disabled = true;
        insanityRPGBtn.disabled = true;
        fetch('/joinQueue?mode=classicrpg').then(response => window.location.href = response.url);
      }
    }
    function joinClassicChess()
    {

      if(classicChessBtn.innerHTML == "Leave Queue")
      {
        classicChessBtn.innerHTML = "Classic Chess";
        classicChessBtn.style.backgroundColor = defaultBtnColor;
        classicRPGBtn.disabled = false;
        insanityRPGBtn.disabled = false;
        fetch('/leaveQueue?mode=classicchess');
      }
      else
      {
        classicChessBtn.innerHTML = "Leave Queue";
        classicChessBtn.style.backgroundColor = "red";
        classicRPGBtn.disabled = true;
        insanityRPGBtn.disabled = true;
        fetch('/joinQueue?mode=classicchess').then(response => window.location.href = response.url);
      }
    }
    function joinInsanityRPG()
    {
      if(insanityRPGBtn.innerHTML == "Leave Queue")
      {
        insanityRPGBtn.innerHTML = "Insanity RPG";
        insanityRPGBtn.style.backgroundColor = defaultBtnColor;
        classicChessBtn.disabled = false;
        classicRPGBtn.disabled = false;
        fetch('/leaveQueue?mode=insanityrpg');
      }
      else
      {
        insanityRPGBtn.innerHTML = "Leave Queue";
        insanityRPGBtn.style.backgroundColor = "red";
        classicChessBtn.disabled = true;
        classicRPGBtn.disabled = true;
        fetch('/joinQueue?mode=insanityrpg').then(response => window.location.href = response.url);
      }
    }

{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
    ],
}
{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "lib": ["es2017", "DOM"],  
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
    ],
}
